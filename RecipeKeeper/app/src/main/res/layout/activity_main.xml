<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_margin="10dp"
        android:background="@color/title"
        android:text="@string/app_Title"
        android:textAlignment="center"
        android:textColor="@color/title_text"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddRecipe"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="@color/button"
            android:text="@string/btn_recipe"
            android:textColor="@color/button_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/txt_recipe"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddIngredients"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button"
            android:text="@string/btn_ingredients"
            android:textColor="@color/button_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtIngredients"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/btn_ingredients"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddInstructions"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button"
            android:text="@string/btn_instruction"
            android:textColor="@color/button_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtInstructions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/txt_instruction"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewRecipeArea"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:scrollbarDefaultDelayBeforeFade="400"
        android:scrollbars="vertical"
        android:text="@string/app_recipe_area"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveRecipe"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button"
            android:text="@string/btn_save"
            android:textColor="@color/button_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button"
            android:text="@string/btn_clear"
            android:textColor="@color/button_text"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>