<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/homepage_title"
        android:textAlignment="center"
        android:textColor="@color/login_button"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="411dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="731dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/myimage"
        tools:layout_conversion_absoluteHeight="201dp"
        tools:layout_conversion_absoluteWidth="411dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="731dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:textColor="@color/login_button"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="411dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="933dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/student_id"
        android:textAlignment="center"
        android:textColor="@color/login_button"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="411dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="933dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/login_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingTop="50dp"
                android:text="@string/book_list"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/book_background"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_1"
                android:textColor="@color/login_button"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_2"
                android:textColor="@color/login_button"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_3"
                android:textColor="@color/login_button"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_4"
                android:textColor="@color/login_button"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_5"
                android:textColor="@color/login_button"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_6"
                android:textColor="@color/login_button"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ic_launcher_background"
                android:paddingLeft="5dp"
                android:shadowColor="@android:color/holo_red_light"
                android:shadowRadius="1"
                android:text="@string/book_7"
                android:textColor="@color/login_button"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>